<% include layouts/header %>
<br>
<div class="row">
  <div class="col-xs-6">
    <a href="/"><button class="btn btn-lg btn-info"><i class="fa fa-arrow-circle-left" aria-hidden="true"></i>
    Home</button></a>
  </div>
  <%if(rights){%>
  <div class="col-xs-6">
    <a class="pull-right" href="/newpage"><button class="btn btn-lg btn-info"><i class="fa fa-plus-circle" aria-hidden="true"></i>
    Add New</button></a>
  </div>
  <%}%>
</div>
<div class="container text-center">
  <h1><i class="fa fa-list" aria-hidden="true"></i> Categories</h1>
  <br><br>
  <div class="row" id="row">
    <% for(i=0;i<pages.length;++i){ %>
    <div class="col-sm-6 col-md-4" id="col">
      <div class="thumbnail">
        <img src="<%= pages[i].logo %>" alt= "<%= pages[i].description %>" style="height:200px;">
        <div class="caption">
          <p><%= pages[i].description %></p>
          <p><strong>Start Exploring!</strong></p>
          <p><a href="/downloads/<%=pages[i].redirect%>" style= "width:100%;" class="btn btn-primary" role="button" name="<%=pages[i].name%>">Explore <%=pages[i].name%><span name="<%=pages[i].name%>" style="display:none";><%=pages[i].name%><%=pages[i].name%><%=pages[i].name%><%=pages[i].name%></span></a></p>
        </div>
      </div>
    </div>
    <% } %>
  </div>
</div>
<!-- Modal -->
<div class="modal fade" id="automatic" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title text-center" id="myModalLabel">Welcome to DownloadExplore!</h4>
      </div>
      <div class="modal-body" style="font-family: 'Josefin Sans', sans-serif;">
          <h3 class="text-center">We serve the best content for you all!</h3>
          <br>
          <h4>We are buliding a platform for you to find all your Downloads at one place! So Stop thinking... Start Exploring!</h4>
          <br>
          <h2 class="text-center">Subscribe to our Newsletter for latest offers and stuff!</h2>
          <br>
          <img src="http://yournerdybestfriend.com/wp-content/uploads/2014/10/Beth-Cartoon-with-Sign-Get-the-Newsletter.png" style="width:50%">
          <br><br><br>
          <form action="/email/downloads" method="POST">
            <div class="form-group">
              <label for="Name">Your Name</label>
              <input type="name" class="form-control" id="Name" name="name" placeholder="Your Full Name goes in here" required>
            </div>
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control" id="email" name="email" placeholder="Enter your Valid Email Address" required>
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
          </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<%if(subscribed === 0){%>
<script type="text/javascript">
setTimeout(
  function()
  {
    $('#automatic').modal({
      keyboard: false
    })
    //do something special
  }, 10000);
</script>
<%}%>

<% include layouts/footer %>
